# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
charset = utf-8

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{go,mod}]
indent_style = tab
max_line_length = 120

[Makefile*]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
max_line_length = 140
